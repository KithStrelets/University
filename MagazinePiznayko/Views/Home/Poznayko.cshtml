@model MagazinePiznayko.Controllers.HomeController
    @{
        ViewBag.Title = "Познайка";
    }
        <!DOCTYPE html>
        <html lang="ru">
        <head>
            <meta charset="UTF-8">
            <link rel="stylesheet" href="~/Content/default.css">
            <base href="/">
            <title>Познайко</title>
            <script src=http://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js></script>
        </head>
        <body>
            <script type="text/javascript">
                $(function () {
                    $(window).scroll(function () {
                        var top = $(document).scrollTop();
                        if (top < 215) {
                            $(".strip").css({ top: '0', position: 'relative' });
                            $(".small_logo").css({ display: 'none', opacity: '0' });
                            $(".content").css({ margin: '0 0 0' });
                        }
                        else {
                            $(".strip").css({ top: '0', position: 'fixed' });
                            $(".small_logo").css({ display: 'inline-block', opacity: '1' });
                            $(".content").css({ margin: '50px 0 0' });
                        }
                    });
                });
            </script>
            <div class="main_container">
                <header>
                   @Html.ActionLink("  ", "Index", null, new { @class = "logo" })<div class="ads">
                    <div class="text">
                        <h1>

                            Листування: а/с 125, м. Київ-50, 04050, Україна
                            <br>posnayko-referent@niko.kiev.ua
                            <br>тел: (067) 232-40-34
                        </h1>
                    </div>
                </div>
                    <nav>
                        <div class="strip">
                            <div class="iconmenu">


                                <div class="iconmenu-content">
                                    @Html.ActionLink("Головна", "Index")
                                    @Html.ActionLink("Контакти", "Contacts")
                                    <a href="#">Дитячі свята</a>
                                    <a href="#">Батькам</a>
                                    <a href="#">Педагогам</a>
                                </div>

                            </div>
                            <div class="text">
                                <ul>
                                    <div class="small_logo"></div>
                                    <li class="selected">@Html.ActionLink("Познайка", "Poznayko")</li>
                                    <li>@Html.ActionLink("Posnayko", "Posnayko")</li>
                                    <li>@Html.ActionLink("Пізнайко від 2 до 6", "Piznaykotwo")</li>
                                    <li>@Html.ActionLink("Пізнайко від 6", "Piznaykosix")</li>
                                </ul>
                            </div>
                            @Html.ActionLink("  ", "Registr", null, new { @class = "iconprofile" })
                        </div>
                    </nav>
                </header>
                <div class="content">
                    <div>
                        <div class="poster"><img src="~/Content/images/magleo.png">Ціна: 25.99 грн</div>

                        <div class="text">
                            <h1>Тема номера: Про чарівників</h1>
                            <h5>Пізнайко, №12, 2015 р.</h5>
                            <p>Передноворічний випуск журналу «Познайка» – суцільний сюрприз. Щойно його розгортаєш – одразу потрапляєш у крижану казку. Читаєш далі – й опиняєшся на святковій арені цирку. Ще декілька сторінок – і от, ти вже граєш у фінальну гру «Володаря Чарівного лісу» та йдеш на Проніну вечірку. А там вухолапохвості друзі ніяк не можуть зрозуміти одне одного, і без тебе їм не обійтись! Як приготувати найсмачніше у світі печиво, літати без гелікоптера й де шукати антарктичних гіпопотамів – усе це теж є в грудневому випуску журналу «Познайка». «Про чарівників» створюють новорічний настрій з перших сторінок!</p>
                        </div>
                        <div>@Html.ActionLink("  ", "Registr", null, new { @class = "buttonzakaz" })</div>
                    </div>

                    <div class="about">
                        <div class="picture_about"><img src="~/Content/images/1pic.png">Скоро праздник!</div>
                        <div class="picture_about"><img src="~/Content/images/2pic.png">Ты меня понимаешь?</div>
                        <div class="picture_about"><img src="~/Content/images/3pic.png">География всмятку</div>
                    </div>
                    <div class="bookslist">
                        <p>-Попередні випуски-</p>
                    </div>
                </div>


                <footer>
                    <p> 2017 - Copyright All Right Reserved. Designed and Developed by Strelets Nikita.</p>
                </footer>
            </div>

        </body>
    </html>